{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    { 
      "src": "api/chatbot.js", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    { 
      "src": "/api/chatbot", 
      "dest": "/api/chatbot.js" 
    },
    { 
      "src": "/static/(.*)", 
      "dest": "/static/$1" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html", 
      "headers": {
        "Cache-Control": "s-maxage=0, stale-while-revalidate=60"
      }
    }
  ]
}
